#!/bin/bash

# Functions
git.checkout.topath() { git show "$1":"$2" > "$3"; }
git.init() { git init --bare "$1"; }
mount.basic() { sudo mount -o "$1",remount "$2"; }
net.routes() { sudo ping -b "$1" -c 3 -w 3; arp -a; }
find.path.name() { sudo find "$1" -name "$2"; }
gvim.open() { gvim "$1" &> /dev/null & }
command.show() { grep -rn '/home/kshitij/repos/github_sandbox/settings_files/.settings_bash_aliases' -e "$1"; }
tar.untar() { tar xvf $1 -C $2; }
tar.comp() { tar cvf $1 $2; }

# Aliases
alias ldir='du -sh *'
alias bash.refresh='. ~/.bashrc'
alias bash.alias.edit='vi ~/repos/github_sandbox/settings_files/.settings_bash_aliases'
alias cd.homesandbox='cd ~/home_sandbox/'
alias cd.githubsandbox.cs='cd ~/repos/github_sandbox/study_resources/18600_fcs'
alias cd.githubsandbox='cd ~/repos/github_sandbox/'
alias cd.launcherentries='cd /usr/share/applications/'
alias adb.restart='adb kill-server;sudo adb start-server;'
alias g.s='git status'
alias g.a='git add --all'
alias git.stash.unstaged='git stash save --keep-index;'
alias git.drop.unstaged='git stash save --keep-index; git stash drop;'
alias git.ignore='git rm --cached;'
alias padb='python ~/repos/github_sandbox/scripts/padb_script.py'
alias a.d='adb devices'
alias ssh.genkey='ssh-keygen -b 4096 -t rsa'
alias cat.hosts='cat /etc/hosts'
alias net.routes.default='sudo ping -b 192.168.1.255 -c 3 -w 3; arp -a;'
alias mint.cinnamon.edit='~/.themes/kshitij_theme/cinnamon/cinnamon.css'
alias desktop.launcher.add='vi /usr/share/app-install/desktop/template.desktop'
alias bluetooth.commandline='bluetoothctl' # --help
alias git.smartgit='sh /usr/share/smartgit/bin/smartgit.sh --open `pwd` &> /dev/null &'
alias gvim.start='gvim &> /dev/null &'

# Examples
alias example.suppress_output='echo "sample output" &> /dev/null'
alias example.command_parameter='echo "trying to echo from current directory -- `pwd`"'
alias example.desktop.launcher='cat /usr/share/app-install/desktop/gip\:gip.desktop'

# # Bash Modifications
force_color_prompt=yes
if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    color_prompt=yes
    else
    color_prompt=
    fi
fi
if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\W\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\W\$'
fi
unset color_prompt force_color_prompt

# Disabled Items
# alias googledrive.pull.studentresources='drive-google pull ~/google_drive/Study\ Resources/'
# ln -s ~/repos/github_sandbox/settings_files/sublime_text_3/Preferences.sublime-settings ~/.config/sublime-text-3/Packages/User/Preferences.sublime-settings
